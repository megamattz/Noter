<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Noter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Noter"
	xmlns:views="clr-namespace:Noter.Views"
	x:Name="shellMain"
    Shell.FlyoutBehavior="Flyout"
    Title="Noter">

	<Shell.TitleView>
		<Label
			BindingContext="{x:Reference shellMain}"
			FontSize="20"
			FontFamily="LunasimaBold"
			VerticalOptions="Center"
            Text="{Binding Path=CurrentItem.Title, Mode=OneWay}"/>
		
	</Shell.TitleView>

	<ShellContent
        Title="Noter"
        ContentTemplate="{DataTemplate views:NotesPage}"
        Route="NotesPage" />

	<ShellContent
		Title="Add Note"
		ContentTemplate="{DataTemplate views:AddEditNotePage}"
		Route="AddEditNotePage" />

	<ShellContent
		Title="Add Note"
		ContentTemplate="{DataTemplate views:ViewNotePage}"
		Route="ViewNotePage" />

</Shell>
