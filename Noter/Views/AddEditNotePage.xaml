<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Noter.ViewModels"
			 xmlns:cb="clr-namespace:Noter.CoreBusiness;assembly=Noter.CoreBusiness"
			 x:DataType="vm:AddEditNotePageViewModel"
             x:Class="Noter.Views.AddEditNotePage"
             Title="Add Note">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70" />
			<RowDefinition Height="120" />
			<RowDefinition Height="*"/>
			<RowDefinition Height="80" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		
		<!--Note Title-->

		<StackLayout
			Padding="10"
			Grid.Row="0"
			Grid.Column="0">
			<Label Text="Note Title" />

			<Border
				Stroke="{StaticResource EditableTextBorderColor}"
				Padding="{StaticResource EditableTextBorderPadding}"
				StrokeThickness="{StaticResource EditableTextBorderThickness}">
				<Entry
					Text="{Binding NoteTitle}"/>
			</Border>			
		</StackLayout>
		
		<!--Note Category-->
		
		<StackLayout
			Padding="10"
			Grid.Row="1"
			Grid.Column="0">			
			<Label Text="Category" Padding="0,5,5,5"/>
			<Grid
				RadioButtonGroup.GroupName="NoteCategoryGroup" 
				RadioButtonGroup.SelectedValue="{Binding Category}">

				<Grid.RowDefinitions>
					<RowDefinition Height="auto" />
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<VerticalStackLayout Spacing="4" HorizontalOptions="Center" Grid.Column="0">
					<Image Source="notepad.png" WidthRequest="40" HeightRequest="40" />
					<RadioButton Value="{Static cb:NoteCategories.General}" Content="General" />
				</VerticalStackLayout>

				<VerticalStackLayout Spacing="4" HorizontalOptions="Center" Grid.Column="1">
					<Image Source="star.png" WidthRequest="40" HeightRequest="40" />
					<RadioButton Value="{Static cb:NoteCategories.Starred}" Content="Starred" />
				</VerticalStackLayout>

				<VerticalStackLayout Spacing="4" HorizontalOptions="Center" Grid.Column="2">
					<Image Source="tick.png" WidthRequest="40" HeightRequest="40" />
					<RadioButton Value="{Static cb:NoteCategories.Tick}" Content="List" />
				</VerticalStackLayout>

				<VerticalStackLayout Spacing="4" HorizontalOptions="Center" Grid.Column="3">
					<Image Source="game.png" WidthRequest="40" HeightRequest="40" />
					<RadioButton Value="{Static cb:NoteCategories.Game}" Content="Fun" />
				</VerticalStackLayout>

			</Grid>			
		</StackLayout>
		
		<!--Note Text-->

		<StackLayout
			Grid.Row="2"
			Padding="10"
			Grid.Column="0"
			VerticalOptions="FillAndExpand">
			
			<Label Text="Note Text" />

			<Border
				Stroke="{StaticResource EditableTextBorderColor}"
				Padding="{StaticResource EditableTextBorderPadding}"
				VerticalOptions="FillAndExpand"
				StrokeThickness="{StaticResource EditableTextBorderThickness}">
			
			<Editor
				Text="{Binding NoteText}"
				VerticalOptions="FillAndExpand"/>
			</Border>
		</StackLayout>
		
		<!--Option Buttons-->

		<Grid
			Grid.Row="3"
			Grid.Column="0"
			ColumnSpacing="10"
			Padding="10,5,10,5">

			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button
				Text="Save"
				Command="{Binding SaveNoteCommand}"
				Grid.Row="0"
				Grid.Column="0"/>

			<Button
				x:Name="btnCancel"
				Text="Cancel"
				Command="{Binding CancelCommand}"
				Grid.Row="0"
				Grid.Column="1"/>
		</Grid>
	</Grid>
</ContentPage>