<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Noter.ViewModels"
			 x:DataType="vm:ViewNoteViewModel"
             x:Class="Noter.Views.ViewNotePage"
             Title="ViewNotePage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70" />
			<RowDefinition Height="120" />
			<RowDefinition Height="*"/>
			<RowDefinition Height="80" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		
		<!--Note title-->

		<StackLayout
			Grid.Row="0"
			Padding="10"
			Grid.Column="0">
			
			<Label Text="Note Title" />
			<Entry
				Text="{Binding Note.NoteTitle}"
				IsReadOnly="True"/>
		</StackLayout>
		
		<!--Note Category-->
		<StackLayout
			Padding="10"
			Grid.Row="1">
			<Label Text="Category" Padding="0,5,0,5"/>
			<Image
				HorizontalOptions="Start"
				Source="{Binding Note.NoteCategory, Converter={StaticResource CategoryConverter}}"/>
		</StackLayout>
		

		<!--Note Text-->

		<StackLayout
			Grid.Row="2"
			Padding="10"
			Grid.Column="0">			
			<Label Text="Note Text" />
			<Editor
				Text="{Binding Note.NoteText}"
				IsReadOnly="True"
				VerticalOptions="FillAndExpand"/>
		</StackLayout>

		<Grid
			Grid.Row="3"
			Grid.Column="0"
			ColumnSpacing="10"
			Padding="10,5,10,5">

			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button
				Text="Back"
				Command="{Binding BackCommand}"
				Grid.Row="0"
				Grid.Column="0"/>

			<Button
				x:Name="btnCancel"
				Text="Edit"
				Grid.Row="0"
				Grid.Column="1"/>
		</Grid>
	</Grid>
</ContentPage>